<?xml version="1.0" encoding="utf-8"?>
<AdderiGrafico>
	<Style>
		<!-- Opções Type: Line, Spline, StepLine, ScatterLine, Area, StackedArea, FullStackedArea, StepArea, SplineArea
StackedSplineArea, FullStackedSplineArea. -->
		<Type>ScatterLine</Type>
		<BackgroundTransparent>False</BackgroundTransparent><!--Fundo total trasparente-->
		<BackgroundColor>#836FFF</BackgroundColor>
	</Style>
	<Title>
		<Visible>True</Visible>
		<Text>Vendas</Text>
		<!-- Opções Font: Arial, Times New Roman, Calibri, Verdana, Tahoma, Courier New, Comic Sans MS, Segoe UI, Georgia ...-->
		<Font>Calibri</Font>
		<Size>25</Size>
		<!--Opções Style: Regular, Bold, Italic, Underline, Strikeout.-->
		<Style>Strikeout</Style>
		<Color>#8B0000</Color>
	</Title>
	<TitleX>
		<Visible>True</Visible>
		<Text>Data</Text>
		<Font>Calibri</Font>
		<Size>16</Size>
		<Style>Strikeout</Style>
		<Color>#98FB98</Color>
	</TitleX>
	<LabelX>
		<Visible>True</Visible>
		<Font>Calibri</Font>
		<Size>9</Size>
		<Color>#FF8C00</Color>
		<LineWidth>1</LineWidth><!--Expessura da linha do eixo X-->
		<LeftMargin>1</LeftMargin><!--Margem da linha do eixo Y até o segmento das barras-->
	</LabelX>
	<TitleY>
		<Visible>True</Visible>
		<Text>Valores</Text>
		<Font>Calibri</Font>
		<Size>16</Size>
		<Style>Strikeout</Style>
		<Color>#98FB98</Color>
	</TitleY>
	<LabelY>
		<Visible>True</Visible>
		<Font>Calibri</Font>
		<Size>9</Size>
		<Color>#FFFF00</Color>
		<LineWidth>1</LineWidth>
		<!--Opções Picture: {A} = Texto dos dados //{V} = Valor dos dados // {S} = Nome da série // {VP:P} = Porcentagem do valor total // {V:F2} = Formata o valor com 2 casas decimais // {V:C} = Formata o valor como moeda // {V:0}% = Exibe o valor inteiro da serie com o simbolo de % // R${V:C} = Valor em reais formatado como moeda (Exemplo: R$ 1.234,56) // {A:dd/MM/yyyy HH:mm:ss} = Formatação data e hora // {A:t} = Hora curta (Exemplo: 14:30) // {A:T} = Hora longa (Exemplo: 14:30:00) // {VP:P0} = Porcentagem inteira (Exemplo: 75%) // {VP:P2} = Mostra a porcentagem com 2 casas decimais -->
		<Picture>{V:0}%</Picture>
	</LabelY>
	<Legend>
		<Visible>True</Visible>
		<Font>Calibri</Font>
		<Size>10</Size>
		<Style>Strikeout</Style>
		<Color>#00BFFF</Color>
		<BackgroundOpacity>200</BackgroundOpacity><!--Nivel de trasparência do fundo da legenda-->
		<BackgroundTransparent>True</BackgroundTransparent>
		<BackgroundColor>#FFFFFF</BackgroundColor>
		<DirectionHorizontal>True</DirectionHorizontal><!--true horizontal // false vertical-->
		<PercentageHorizontal>10</PercentageHorizontal><!-- % até a quebra de linha-->
		<!--Opções PositionHorizontal: Left, Center, Right, RightOutside, LeftOutside-->
		<PositionHorizontal>RightOutside</PositionHorizontal>
		<!--Opções PositionVertical: Top, Center, Bottom, BottomOutside, TopOutside-->
		<PositionVertical>Top</PositionVertical>
		<MarkerWidth>13</MarkerWidth><!--Largura do marcador da legenda-->
		<MarkerHeight>9</MarkerHeight><!--Altura do marcador da legenda-->
	</Legend>
	<Area>
		<Grade>False</Grade> <!--Linhas de fundo do grafico -->
		<Border>False</Border>
		<OrientationXY>False</OrientationXY><!--Troca o eixo X com o Y de lugar-->
		<RotationX>-90</RotationX><!--Gira os dados do eixo X-->
		<RotationY>0</RotationY><!--Gira os dados do eixo Y-->
		<Color>#708090</Color>
		<BlockSize>0,6</BlockSize><!--Tamanho de cada bloco do eixo X-->
	</Area>
	<Series>
		<Serie>
			<Text>Valor Contrato</Text>
			<Color>#FF5733</Color>
			<Label>
				<Visible>True</Visible>
				<!--Opções Position: StepLine = Top, Outside. || Line/Area = Center, Outside.	-->
				<Position>Outside</Position>
				<Font>Calibri</Font>
				<Size>9</Size>
				<Style>Regular</Style>
				<Color>#1C1C1C</Color>
				<BackgroundTransparent>True</BackgroundTransparent>
				<BackgroundColor>#B0E0E6</BackgroundColor>
				<Picture>{V:0}%</Picture>
				<Marker>
					<Visible>True</Visible><!-- Marcador das séries -->
					<Size>15</Size>
					<Color>#FF7F50</Color>
					<!--Opções Kind: Star, Circle, Square, Diamond, Triangle, InvertedTriangle, Cross, Plus. -->
					<Kind>Star</Kind>
					<BorderVisible>True</BorderVisible><!-- Borda do marcador -->
					<BorderColor>#2F4F4F</BorderColor>
				</Marker>
			</Label>
		</Serie>
		<Serie>
			<Text>Juros</Text>
			<Color>#DC143C</Color>
			<Label>
				<Visible>True</Visible>
				<Position>Outside</Position> <!---->
				<Font>Calibri</Font>
				<Size>9</Size>
				<Style>Strikeout</Style>
				<Color>#00FF7F</Color>
				<BackgroundTransparent>True</BackgroundTransparent>
				<BackgroundColor>#B0E0E6</BackgroundColor>
				<Picture>{V:0}%</Picture>
				<Marker>
					<Visible>True</Visible><!-- Marcador das séries -->
					<Size>15</Size>
					<Color>#FF7F50</Color>
					<!--Opções Kind: Star, Circle, Square, Diamond, Triangle, InvertedTriangle, Cross, Plus. -->
					<Kind>Plus</Kind>
					<BorderVisible>True</BorderVisible><!-- Borda do marcador -->
					<BorderColor>#2F4F4F</BorderColor>
				</Marker>
			</Label>
		</Serie>
		<Serie>
			<Text>Parcelado</Text>
			<Color>#DC143C</Color>
			<Label>
				<Visible>True</Visible>				
				<Position>Outside</Position> <!---->
				<Font>Calibri</Font>
				<Size>9</Size>
				<Style>Strikeout</Style>
				<Color>#00FF7F</Color>
				<BackgroundTransparent>True</BackgroundTransparent>
				<BackgroundColor>#B0E0E6</BackgroundColor>
				<Picture>{V:0}%</Picture>
				<Marker>
					<Visible>False</Visible> <!-- Marcador das séries -->
					<Size>15</Size>
					<Color>#FF7F50</Color>
					<!--Opções Kind: Star, Circle, Square, Diamond, Triangle, InvertedTriangle, Cross, Plus. -->
					<Kind>Star</Kind>
					<BorderVisible>True</BorderVisible> <!-- Borda do marcador -->
					<BorderColor>#2F4F4F</BorderColor>
				</Marker>
			</Label>
		</Serie>
	</Series>
